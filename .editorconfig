# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# make double quotes standard for vue and html
[*.vue]
ij_html_quote_style =  double
ij_js_quote_style =  double

[*.html]
ij_html_quote_style =  double
ij_js_quote_style =  double
